<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050859"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/txt_setting"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="#090909"
        android:text="환경설정"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:strokeColor="#F8F7F7"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="#0B0A0A"
        android:text="돌아가기"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:strokeColor="#FFFAFA"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="160dp"
        android:layout_height="280dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_setting"
        app:layout_constraintVertical_bias="0.453">

        <Button
            android:id="@+id/txt_music"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#0E0E0E"
            android:text="음악"
            android:textSize="25sp"
            android:textStyle="bold"
            app:strokeColor="#F4EFEF" />

        <Button
            android:id="@+id/txt_bgm"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#0E0E0E"
            android:text="배경음"
            android:textSize="25sp"
            android:textStyle="bold"
            app:strokeColor="#F4EFEF" />

        <Button
            android:id="@+id/txt_effect"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#0E0E0E"
            android:text="효과음"
            android:textSize="25sp"
            android:textStyle="bold"
            app:strokeColor="#F4EFEF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/txt_setting">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_SoundOn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#070707"
                android:text="ON"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_bgmON"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/black"
                android:text="ON"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_effectON"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#070707"
                android:text="ON"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_SoundOff"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#070707"
                android:text="OFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_bgmOFF"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#070707"
                android:text="OFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_effectOFF"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#070707"
                android:text="OFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>