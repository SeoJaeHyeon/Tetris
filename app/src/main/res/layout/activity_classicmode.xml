<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050859"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridmain"
                android:layout_width="300dp"
                android:layout_height="600dp"
                android:background="#050859"
                app:columnCount="10"
                app:rowCount="20">

            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_stop"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/stop" />

                <TextView
                    android:id="@+id/txt_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_horizontal"
                    android:text="Next Block"
                    android:textColor="@color/white" />

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/nextblock"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="#050859">

                </androidx.gridlayout.widget.GridLayout>

                <TextView
                    android:id="@+id/txt_level"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="#F4E75C"
                    android:gravity="center_horizontal"
                    android:text="LEVEL"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_high"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="#F3E65C"
                    android:gravity="center_horizontal"
                    android:text="HIGH"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_score"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="#F2E55C"
                    android:gravity="center_horizontal"
                    android:text="SCORE"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/l2" />

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/down" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/right" />

            <ImageView
                android:id="@+id/img_change"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/change" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>